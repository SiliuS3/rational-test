{% extends 'base.html.twig' %}

{% block body %}
    <h1>Department</h1>

    <table>
        <tbody>
            <tr>
                <th>Deptno</th>
                <td>{{ department.deptNo }}</td>
            </tr>
            <tr>
                <th>Deptname</th>
                <td>{{ department.deptName }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('department_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('department_edit', { 'deptNo': department.deptNo }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
