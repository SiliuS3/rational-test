{% extends 'base.html.twig' %}

{% block body %}
    <h1>Departments list</h1>

    <table>
        <thead>
            <tr>
                <th>Deptno</th>
                <th>Deptname</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for department in departments %}
            <tr>
                <td><a href="{{ path('department_show', { 'deptNo': department.deptNo }) }}">{{ department.deptNo }}</a></td>
                <td>{{ department.deptName }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('department_show', { 'deptNo': department.deptNo }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('department_edit', { 'deptNo': department.deptNo }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('department_new') }}">Create a new department</a>
        </li>
    </ul>
{% endblock %}
